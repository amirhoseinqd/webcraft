#!/usr/bin/env node

const { createProject, displayHelp, displayVersion } = require('../lib/create'); // Import new functions
const [, , command, ...args] = process.argv;

if (command === 'create') {
    createProject(args[0]);
} else if (command === 'help') {
    displayHelp();
} else if (command === 'version') {
    displayVersion();
} else {
    console.error('Invalid command. Usage: webcraft <command>');
}
